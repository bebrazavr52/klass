def schet ():
    a = input()
    a = float(a)
    b = input()
    b = float(b)
    if a > b:
        print (a - b)
    else:
        print (b - a)
    return a,b

с, d = schet()


def pipi ():
    x = input()
    x = float(x)
    y = input()
    y = float(y)
    if x > y:
        print (x+ y)
    else:
        print (y + x)
    return x,y

e, f = schet()
#Задача 3
answer = ["душ", "@","петушиным"]
def schet1 ():
    mystery1 = ("То холодный, то горячий, то стоячий, то висячий, я три буквы назову, в середине буква у")
    print (mystery1)
    a = input()
    if a == answer[0]:
        print ("Правильно , молодец")
    else:
        print ("Неверно, правильный ответ - ", answer[0])
def schet2 (): 
    mystery2 = ("Не лает, не кусается, и точно так же называется")
    print(mystery2)
    a = input()
    if mystery2 == answer[1]:
        print ("Правильно , молодец")
    else:
        print ("Неверно, правильный ответ - ", answer[1])
def schet3 ():
    mystery3 = ("Каким гребнем не расчешешь волосы?")
    print(mystery3)
    a = input ()
    if mystery3 == answer[2]:
        print ("Правильно , молодец")
    else:
        print ("Неверно, правильный ответ - ", answer[2] )
