#Пример 
def schet ():
    a = input()
    a = float(a)
    b = input()
    b = float(b)
    if a > b:
        print (a - b)
    else:
        print (b - a)
    return a,b

c, d = schet()
e, f = schet()
z, x = schet()

# Задача 1
def schet ():
    a = input()
    a = float(a)
    b = input()
    b = float(b)
    y = input()
    y = float(y)
    if a > b > y:
        print (a - b + y)
    else:
        print (b - a + y)
    return a,b,y

c,d,e = schet()
f,g,h = schet()
z,x,v = schet()
